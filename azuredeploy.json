{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "site_name": {
      "defaultValue": "opener",
      "type": "string"
    },
    "appserviceplan_size": {
      "defaultValue": "S2",
      "type": "string",
      "allowedValues": [
        "S1",
        "S2",
        "S3"
      ]
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "appserviceplan_name": "[concat(parameters('site_name'), '-wrapper-plan')]",
    "language_identifier_site_name": "[concat(parameters('site_name'), '-language-identifier')]",
    "tokenizer_site_name": "[concat(parameters('site_name'), '-tokenizer')]",
    "pos_tagger_site_name": "[concat(parameters('site_name'), '-pos-tagger')]",
    "ner_site_name": "[concat(parameters('site_name'), '-ner')]",
    "kaf2json_site_name": "[concat(parameters('site_name'), '-kaf2json')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "language-identifier-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/c-w/opener-docker-language-identifier/master/azuredeploy.json"
        },
        "parameters": {
          "site_name": {
            "value": "[variables('language_identifier_site_name')]"
          },
          "appserviceplan_size": {
            "value": "[parameters('appserviceplan_size')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "tokenizer-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/c-w/opener-docker-tokenizer/master/azuredeploy.json"
        },
        "parameters": {
          "site_name": {
            "value": "[variables('tokenizer_site_name')]"
          },
          "appserviceplan_size": {
            "value": "[parameters('appserviceplan_size')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "pos-tagger-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/c-w/opener-docker-pos-tagger/master/azuredeploy.json"
        },
        "parameters": {
          "site_name": {
            "value": "[variables('pos_tagger_site_name')]"
          },
          "appserviceplan_size": {
            "value": "[parameters('appserviceplan_size')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "ner-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/c-w/opener-docker-ner/master/azuredeploy.json"
        },
        "parameters": {
          "site_name": {
            "value": "[variables('ner_site_name')]"
          },
          "appserviceplan_size": {
            "value": "[parameters('appserviceplan_size')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "kaf2json-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/c-w/kaf2json/master/azuredeploy.json"
        },
        "parameters": {
          "site_name": {
            "value": "[variables('kaf2json_site_name')]"
          },
          "appserviceplan_size": {
            "value": "[parameters('appserviceplan_size')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "sku": {
        "name": "[parameters('appserviceplan_size')]",
        "tier": "Standard",
        "size": "[parameters('appserviceplan_size')]",
        "family": "S",
        "capacity": 1
      },
      "kind": "linux",
      "name": "[variables('appserviceplan_name')]",
      "apiVersion": "2016-09-01",
      "location": "[variables('location')]",
      "properties": {
        "workerSizeId": 0,
        "reserved": true,
        "hostingEnvironment": ""
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Web/sites",
      "kind": "app,linux",
      "name": "[parameters('site_name')]",
      "apiVersion": "2016-08-01",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appserviceplan_name'))]"
      ],
      "tags": {},
      "scale": null,
      "properties": {
        "name": "[parameters('site_name')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appserviceplan_name'))]",
        "httpLoggingEnabled": true,
        "logsDirectorySizeLimit": 35
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2016-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('site_name'))]"
          ],
          "tags": {
            "displayName": "appSettings"
          },
          "properties": {
            "DOCKER_CUSTOM_IMAGE_NAME": "cwolff/opener-docker-wrapper",
            "WEBSITES_ENABLE_APP_SERVICE_STORAGE": "false",
            "SANIC_OPENER_IDENTIFY_LANGUAGE_URL": "[concat('https://', variables('language_identifier_site_name'), '.azurewebsites.net')]",
            "SANIC_OPENER_TOKENIZE_URL": "[concat('https://', variables('tokenizer_site_name'), '.azurewebsites.net')]",
            "SANIC_OPENER_POS_URL": "[concat('https://', variables('pos_tagger_site_name'), '.azurewebsites.net')]",
            "SANIC_OPENER_NER_URL": "[concat('https://', variables('ner_site_name'), '.azurewebsites.net')]",
            "SANIC_OPENER_KAF2JSON_URL": "[concat('https://', variables('kaf2json_site_name'), '.azurewebsites.net')]"
          }
        },
        {
          "name": "logs",
          "type": "config",
          "apiVersion": "2016-08-01",
          "tags": {},
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('site_name'))]"
          ],
          "properties": {
            "applicationLogs": {
              "fileSystem": {
                "level": "Off"
              },
              "azureTableStorage": {
                "level": "Off",
                "sasUrl": null
              },
              "azureBlobStorage": {
                "level": "Off",
                "sasUrl": null,
                "retentionInDays": null
              }
            },
            "httpLogs": {
              "fileSystem": {
                "retentionInMb": 35,
                "retentionInDays": 7,
                "enabled": true
              },
              "azureBlobStorage": {
                "sasUrl": null,
                "retentionInDays": 7,
                "enabled": false
              }
            },
            "failedRequestsTracing": {
              "enabled": false
            },
            "detailedErrorMessages": {
              "enabled": false
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}
